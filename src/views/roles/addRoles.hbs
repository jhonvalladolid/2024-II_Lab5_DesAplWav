<div class="container p-4" style="margin-top:70px;">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3 class="text-uppercase">CREAR ROL</h3>
        </div>
        <div class="card-body">
          <form action="/addRoles" method="post">
            <div class="input-group mt-2">
              <label for="descripcion" class="input-group-text">Descripción</label>
              <input class="form-control" type="text" name="descripcion" id="descripcion" placeholder="Descripción del rol" autofocus required>
            </div>
