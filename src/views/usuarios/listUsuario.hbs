<div class="container" style="margin-top:70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Listado de Usuarios</h3>

        <div style="padding: 10px;">
        <button class="btn btn-danger">
            <a class="nav-link link-light" aria-current="page" href="/addUsuario"> Nuevo Usuario</a>
        </button>
        </div>

        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-3">Usuario</th>
                    <th scope="col" class="col-3">Correo</th>
                    <th scope="col" class="col-2">Rol</th>
                    <th scope="col" class="col-2">Estado</th>
                    <th scope="col" class="col-2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each usuarios}}
                <tr>
                    <td>{{this.usuario}}</td>
                    <td>{{this.correo}}</td>
                    <td>{{this.rol}}</td>
                    <td>{{this.estado}}</td>
                    <td>
                        <div class="">
                            <a href="/editUsuario/{{this.id}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i>Actualizar</a>
                            <a href="/deleteUsuario/{{this.id}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i>Eliminar</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="5">REGISTRO DE USUARIOS</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
